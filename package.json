{
  "name": "@tuki0918/seeded-shuffle",
  "version": "0.1.0",
  "description": "A pseudo-random array shuffling library using Linear Congruential Generator (LCG).",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:check": "tsc -p tsconfig.build.json --noEmit",
    "build:typecheck": "tsc --noEmit",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "prepare": "husky",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "random",
    "shuffle",
    "seeded",
    "deterministic",
    "array",
    "pseudo-random",
    "lcg"
  ],
  "author": "tuki0918",
  "repository": {
    "type": "git",
    "url": "https://github.com/tuki0918/seeded-shuffle.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  }
}
